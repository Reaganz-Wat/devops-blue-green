# Container images
BLUE_IMAGE=ghcr.io/hngprojects/hng_boilerplate_nodejs_web:blue
GREEN_IMAGE=ghcr.io/hngprojects/hng_boilerplate_nodejs_web:green

# Active pool (blue or green)
ACTIVE_POOL=blue

# Release identifiers
RELEASE_ID_BLUE=blue-v1.0.0
RELEASE_ID_GREEN=green-v1.0.0

# Application port (internal)
PORT=3000

# Nginx template variables (computed based on ACTIVE_POOL)
BLUE_BACKUP=backup
GREEN_BACKUP=